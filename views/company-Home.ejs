<h1>Students Associated with Company</h1>

<h2>Allocate Interview</h2>
<form action="/company/allocate" method="GET">
    <button type="submit">Allocate Interview</button>
</form>

<ul>
    <% for (const student of students) { %>
        <li>
            <%= student.name %> - <%= student.college %>
            <form action="/company/update-status/<%= student.id %>" method="POST">
                <input type="text" name="companyResult" placeholder="Company Result">
                <button type="submit">Update Status</button>
            </form>
        </li>
    <% } %>
</ul>

